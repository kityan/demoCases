{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "ordered-imports": false,
    "interface-name": false,
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": false,
    "arrow-parens": false,
    "object-literal-sort-keys": false
  }
}
